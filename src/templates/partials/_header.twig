                    <li><a href="#">Прайс-лист</a></li>
                    <li><a href="#">Отзывы</a></li>
                    <li><a href="#">Контакты</a></li>
                </ul>
            </div>

            <div class="header__bottom-right">
                <div href="#" class="header__favourite xs-hide">
                    <a href="#" class="header__favourite-link">
                        <span class="header__icon">
                            {{ mixins.icon('heart') }}
                        </span>
                        <div class="header__favourite-count header__count">5</div>
                    </a>

                </div>
                <div class="header__cart dropdown-cart dropdown-link">

                    {#<span class="header__cart-text xs-hide">Корзина</span>#}
                    <a href="/cart" class="header__cart-link dropdown-cart__link xs-hide">
                        <div class="header__cart-logo">
                            <div class="header__icon">
                                {{ mixins.icon('cart') }}
                            </div>
                            <div class="header__cart-count header__count">10</div>
                        </div>
                        <div class="header__cart-sum">
                            1 580
                        </div>&nbsp;₽
                    </a>

                    <div class="dropdown-cart__wrap">
                        <div class="dropdown-cart__body dropdown-body">
                            {#<div class="transition-loader">
                                <div class="transition-loader-inner">
                                    <label></label>
                                    <label></label>
                                    <label></label>
                                    <label></label>
                                    <label></label>
                                    <label></label>
                                </div>
                            </div>#}
                            <div class="dropdown-cart__scroll custom-scroll">
                                <div class="dropdown-cart__head">
                                    <div class="dropdown-cart__head-title">
                                        Состав корзины
                                    </div>
                                    <div class="dropdown-cart__head-desc">
                                        Окончательная стоимость может измениться на момент оформления заказа
                                    </div>
                                    <div class="dropdown-cart__head-quantity">
                                        <span class="semibold">Количество:</span>
                                        <span>15&nbsp;шт.</span>
                                    </div>
                                    <div class="dropdown-cart__head-total">
                                        <span class="semibold">Итого:</span>
                                        <span class="dropdown-cart__head-sum">2 350&nbsp;₽</span>
                                    </div>
                                </div>
                                <div class="dropdown-cart__content">
                                    {% for i in range(1,8) %}
                                        <div class="dropdown-cart__item">
                                            <div class="dropdown-cart__item-img">
                                                <img src="img/cat1.jpg" alt="">
                                            </div>
                                            <div class="dropdown-cart__item-content">
                                                <div class="dropdown-cart__item-title">
                                                    М 320 костюм "Дачник"
                                                </div>
                                                <ul class="dropdown-cart__item-text">
                                                    <li><span class="semibold">Размеры:</span> 42, 48, 60</li>
                                                    <li><span class="semibold">Колличество:</span> 5</li>
                                                </ul>
                                                <div class="dropdown-cart__item-price">
                                                    <span class="small">от&nbsp;</span>460&nbsp;₽
                                                </div>
                                            </div>
                                            <div class="dropdown-cart__btn-close btn-close">
                                                {{ mixins.icon('close') }}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="dropdown-cart__footer">
                                    <button class="dropdown-cart__footer-btn btn semibold transition">
                                        <span>Перейти к оформлению</span> {{ mixins.icon('right-arrow') }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
