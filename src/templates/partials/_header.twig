<!-- start header -->
<header class="header">
    <div class="header__top">
        <div class="container header__top-container">
            <a href="/" class="header__logo logo-block">
                <div class="header__logo-main logo-block__main">Иванушка трикотаж</div>
                <div class="header__logo-desc logo-block__desc">Трикотажные изделия от производителя</div>
            </a>
            <div class="header__search">
                <div class="header__search-wrap">
                    <form action="" class="header__search-form">
                        <input type="text" class="header__search-input" placeholder="Поиск">
                        <button type="submit" class="header__search-btn">
                            {{ mixins.icon('magnifier') }}
                        </button>
                    </form>
                    <div class="header__search-result search-result">
                        <ul class="search-result__list custom-scroll" style="display:none">
                            {% for i in range(0, 5) %}
                            <li class="search-result__item">
                                <a href="#" class="search-result__link transition">
                                    <div class="search-result__image">
                                        <img src="img/cat1.jpg" alt="1">
                                    </div>
                                    <div class="search-result__content">
                                        <div class="search-result__title">М231 Костюм мужской / Серый</div>
                                        <div class="search-result__price">Цена: <span class="search-result__price-sum">от 125 Р</span></div>
                                    </div>
                                </a>
                            </li>
                            {% endfor %}
                            <div class="search-result__footer">
                                <a href="#" class="search-result__footer-btn btn">Показать все результаты</a>
                            </div>
                        </ul>

                    </div>
                </div>
            </div>
            <div class="header__top-right">
                <div class="header__search-open">
                    <div class="header__icon">
                        {{ mixins.icon('magnifier') }}
                    </div>
                </div>
                <div class="header__contacts">
                    <a href="tel:+79206759103" class="header__contacts-link">{{ mixins.icon('phone') }}<span>+7 (920) </span>675-91-03</a>
                    <a href="tel:+4932386647" class="header__contacts-link">{{ mixins.icon('phone') }}<span>+7 (4932) </span>38-66-47</a>
                </div>
                <div class="header__lk dropdown-lk dropdown-link">
                    <a href="#" class="header__lk-link">
                        <span class="header__lk-text">Личный кабинет</span>
                        <span class="header__icon">
                            {{ mixins.icon('user') }}
                        </span>
                    </a>
                    <div class="dropdown-lk__body dropdown-body">
                        <a href="#" class="dropdown-lk__item transition" data-modal-ajax-open="sign-in">
                            {{ mixins.icon('login') }} Вход
                        </a>
                        <a href="#" class="dropdown-lk__item transition" data-modal-ajax-open="reg">
                            {{ mixins.icon('check') }} Регистрация
                        </a>
                    </div>
                </div>

                <button class="header__main-menu-open-btn" data-modal-open="mobile-menu">
                <span class="hamb">
                    <i></i><i></i><i></i>
                </span>
                </button>



                <div class="header__actions-mobile">
                    <a href="/favourite/" class="header__favourite">
                        <span class="header__icon">
                            {{ mixins.icon('heart') }}
                        </span>
                        <div class="header__favourite-count header__favourite-count--mobile header__count">5</div>
                    </a>
                    <span class="header__cart-text">Корзина</span>
                    <div class="header__cart">
                        <a href="/cart/" class="header__cart-link dropdown-cart__link">
                            <div class="header__cart-logo">
                            <span class="header__icon">
                                {{ mixins.icon('cart') }}
                            </span>
                                <div class="header__cart-count header__count">10</div>
                            </div>
                            <div class="header__cart-sum">
                                1 580
                            </div>&nbsp;₽
                        </a>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="header__search-popup search-popup">
        <form action="" class="search-popup__form">
            <div class="search-popup__wrap">
                <div class="search-popup__input-block">
                    <input type="text" class="search-popup__input" placeholder="Поиск">
                    <button type="submit" class="search-popup__btn">
                        {{ mixins.icon('magnifier') }}
                    </button>
                </div>

                <div class="search-popup__close-btn">
                    {{ mixins.icon('close') }}
                </div>
            </div>
        </form>
    </div>
    <div class="header__bottom">
        <div class="container header__bottom-container">
            <div class="header__menu">
                <div class="header__catalog-open">
                    <button class="header__catalog-open-btn">
                    <span class="hamb">
                        <i></i><i></i><i></i>
                    </span>
                        Каталог
                    </button>
                </div>
                <ul class="header__nav">
