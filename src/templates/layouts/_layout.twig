{% import "data/_data.twig" as data %}
{% import "partials/_mixins.twig" as mixins %}
{% set debug = false %}
<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>{% if title %}{{ title }}{% else %}Template{% endif %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="theme-color" content="#fff"/>
    <meta name="format-detection" content="telephone=no"/>
    <link rel="stylesheet" media="all" href="css/style.css"/>
    {# {% include "../partials/_media-tags.twig" %} #}
  </head>
  <body>
    <!-- BEGIN content -->
    <div class="page">
      {% if debug %}
        {% include "partials/_debug.twig" %}
      {% endif %}
      {% include "partials/_header.twig" %}
      <div class="main">

        {% if index == false %}
          <div class="container main-title">
            <div class="breadcrumbs" itemscope itemtype="http://schema.org/BreadcrumbList">
              <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <a href="/">Главная</a>
                <meta itemprop="name" content="Главная">
                <meta itemprop="position" content="1">
              </li>
              <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <a href="/catalog/"><span itemprop="name">Каталог</span></a>
                <meta itemprop="position" content="2"></li>
              <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <a href="/catalog/dlya_zhenshchin/"><span itemprop="name">Женский трикотаж</span></a>
                <meta itemprop="position" content="3"></li>
              <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <span itemprop="name">Женский трикотаж больших размеров</span>
                <meta itemprop="position" content="4">
              </li>
            </div>
            {% if catalogDetail != true %}
              <h1 class="page-title">{{ title}}</h1>
            {% endif %}
          </div>
        {% endif %}

        {% block content %}{% endblock %}
      </div>
      {% include "partials/_footer.twig" %}
      {% include "partials/_modals.twig" %}
    </div>
    <!-- END content -->
    <script type="text/javascript" src="js/app.js"></script>

    <!-- !!!!!!!! START: HELPER ТОЛЬКО ДЛЯ DEV !!!!!!!!! -->
    <script src="js/helper-menu.js"></script>
    <!-- !!!!!!!! END: HELPER ТОЛЬКО ДЛЯ DEV !!!!!!!!! -->
  </body>
</html>
